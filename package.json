{
  "name": "iot-backend",
  "version": "2.0.0",
  "description": "IoT Backend with optimized TimescaleDB",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "node scripts/reset-db.js",
    "migrate": "node dist/scripts/run-migrations.js",
    "migrate:status": "psql -h localhost -U postgres -d iot_data -c 'SELECT * FROM table_sizes;'",
    "migrate:rollback": "echo 'Restore from backup: psql -h localhost -U postgres -d iot_data < backups/backup_YYYYMMDD_HHMMSS.sql'",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "iot",
    "fastify",
    "timescaledb",
    "mqtt"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.0.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "fastify": "^5.2.0",
    "fastify-plugin": "^5.0.1",
    "fastify-socket.io": "^5.1.0",
    "fastify-type-provider-zod": "^4.0.2",
    "mqtt": "^5.11.2",
    "pg": "^8.13.1",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.3",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.48.0"
  }
}
