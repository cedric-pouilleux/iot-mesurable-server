{
  "id": "air-quality",
  "name": "Qualité d'air",
  "version": "1.0.0",
  "type": "sensor",
  "hardware": [],
  "sensors": [
    {
      "key": "co2",
      "label": "CO2",
      "unit": "ppm",
      "range": {
        "min": 0,
        "max": 10000
      }
    },
    {
      "key": "eco2",
      "label": "eCO2",
      "unit": "ppm",
      "range": {
        "min": 400,
        "max": 60000
      }
    },
    {
      "key": "temperature",
      "label": "Température",
      "unit": "°C",
      "range": {
        "min": -40,
        "max": 85
      }
    },
    {
      "key": "humidity",
      "label": "Humidité",
      "unit": "%",
      "range": {
        "min": 0,
        "max": 100
      }
    },
    {
      "key": "pressure",
      "label": "Pression",
      "unit": "hPa",
      "range": {
        "min": 300,
        "max": 1200
      }
    },
    {
      "key": "voc",
      "label": "COV",
      "unit": "index",
      "range": {
        "min": 0,
        "max": 500
      }
    },
    {
      "key": "co",
      "label": "CO",
      "unit": "ppm",
      "range": {
        "min": 0,
        "max": 1000
      }
    },
  ],
  "actions": [
    {
      "id": "reset",
      "label": "Redémarrer",
      "icon": "refresh",
      "scope": "hardware"
    },
    {
      "id": "setInterval",
      "label": "Intervalle",
      "icon": "clock",
      "scope": "hardware"
    }
  ]
}